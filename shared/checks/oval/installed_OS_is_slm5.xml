<def-group>
  <definition class="inventory"
  id="installed_OS_is_slm5" version="1">
    <metadata>
      <title>SUSE Linux Micro 5</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <reference ref_id="cpe:/o:suse:linux_micro_server:5"
      source="CPE" />
      <reference ref_id="cpe:/o:suse:linux_micro_desktop:5"
      source="CPE" />
      <description>The operating system installed on the system is
      SUSE Linux Micro 5.</description>
    </metadata>
    <criteria>
      <criterion comment="Installed operating system is part of the unix family"
      test_ref="test_slm5_unix_family" />
      <criteria operator="OR">
        <criterion comment="SLM 5 Desktop is installed" test_ref="test_slm5_desktop" />
        <criterion comment="SLM 5 Server is installed" test_ref="test_slm5_server" />
	<criterion comment="SLESM 5 for SAP Applications is installed" test_ref="test_slm5_for_sap" />
      </criteria>
    </criteria>
  </definition>

  <ind:family_test check="all" check_existence="at_least_one_exists" comment="installed OS part of unix family" id="test_slm5_unix_family" version="1">
    <ind:object object_ref="obj_slm5_unix_family" />
    <ind:state state_ref="state_slm5_unix_family" />
  </ind:family_test>
  <ind:family_state id="state_slm5_unix_family" version="1">
    <ind:family>unix</ind:family>
  </ind:family_state>
  <ind:family_object id="obj_slm5_unix_family" version="1" />

  <linux:rpminfo_test check="all" check_existence="at_least_one_exists" comment="sled-release is version micro 5" id="test_slm5_desktop" version="1">
    <linux:object object_ref="obj_slm5_desktop" />
    <linux:state state_ref="state_slm5_desktop" />
  </linux:rpminfo_test>
  <linux:rpminfo_state id="state_slm5_desktop" version="1">
    <linux:version operation="pattern match">^5.*$</linux:version>
  </linux:rpminfo_state>
  <linux:rpminfo_object id="obj_slm5_desktop" version="1">
    <linux:name>sled-release</linux:name>
  </linux:rpminfo_object>

  <linux:rpminfo_test check="all" check_existence="at_least_one_exists" comment="sles-release is version micro 5" id="test_slm5_server" version="1">
    <linux:object object_ref="obj_slm5_server" />
    <linux:state state_ref="state_slm5_server" />
  </linux:rpminfo_test>
  <linux:rpminfo_state id="state_slm5_server" version="1">
    <linux:version operation="pattern match">^5.*$</linux:version>
  </linux:rpminfo_state>
  <linux:rpminfo_object id="obj_slm5_server" version="1">
    <linux:name>sles-release</linux:name>
  </linux:rpminfo_object>

  <linux:rpminfo_test check="all" check_existence="at_least_one_exists" comment="SLES_SAP-release is version micro 5" id="test_slm_5_for_sap" version="1">
    <linux:object object_ref="obj_slm_5_for_sap" />
    <linux:state state_ref="state_slm_5_for_sap" />
  </linux:rpminfo_test>
  <linux:rpminfo_state id="state_slm_5_for_sap" version="1">
    <linux:version operation="pattern match">^5.*$</linux:version>
  </linux:rpminfo_state>
  <linux:rpminfo_object id="obj_slm_5_for_sap" version="1">
    <linux:name>SLES_SAP-release</linux:name>
  </linux:rpminfo_object>

</def-group>

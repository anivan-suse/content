<def-group>
  <definition class="inventory" id="installed_OS_is_slemicro" version="1">
    <metadata>
      <title>SUSE Linux Enterprise Micro</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <reference ref_id="cpe:/o:suse:slemicro:51" source="CPE" />
      <description>The operating system installed on the system is SUSE Linux Enterprise Micro</description>
    </metadata>
    <criteria comment="current OS is 51" operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family" definition_ref="installed_OS_is_part_of_Unix_family" />
      <criterion comment="slemicro is installed" test_ref="test_slemicro" />
      <criterion comment="SUSE Linux Enterprise Micro is installed" test_ref="test_slemicro" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/slemicro exists" id="test_slemicro" version="1">
    <unix:object object_ref="obj_slemicro" />
  </unix:file_test>
  <unix:file_object comment="check /etc/slemicro file" id="obj_slemicro" version="1">
    <unix:filepath>/etc/slemicro</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check Custom OS version" id="test_slemicro_os_version" version="1">
    <ind:object object_ref="obj_slemicro" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_slemicro_os_version" version="1" comment="Check slemicro version">
    <ind:filepath>/etc/slemicro</ind:filepath>
    <ind:pattern operation="pattern match">^51.[0-9]+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>


